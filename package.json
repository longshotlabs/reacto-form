{
  "name": "@gwhobbs/reacto-form",
  "version": "0.0.4-development",
  "description": "A React form state manager hook designed to work with many popular form UI frameworks",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "scripts": {
    "build": "npm run clean && npm run build:tsc",
    "build:tsc": "tsc -p tsconfig.json",
    "clean": "rimraf build",
    "lint": "tsc --noEmit && eslint --ext .ts,.tsx --config .eslintrc.js --no-eslintrc src",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "watch": "npm run clean && npm run watch:tsc",
    "watch:tsc": "tsc -w -p tsconfig.json",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gwhobbs/reacto-form.git"
  },
  "keywords": [],
  "author": "Long Shot Labs (longshotlabs.co)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/longshotlabs/reacto-form/issues"
  },
  "homepage": "https://github.com/longshotlabs/reacto-form#readme",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/github",
        {
          "successComment": ":tada: This ${issue.pull_request ? 'PR is included' : 'issue has been resolved'} in version ${nextRelease.version} :tada:\n\nThe release is available on:\n- [npm package (@latest dist-tag)](https://www.npmjs.com/package/reacto-form/v/${nextRelease.version})\n- [GitHub release](https://github.com/longshotlabs/reacto-form/releases/tag/${nextRelease.version})\n\nIf this makes you happy, please consider [becoming a sponsor](https://github.com/sponsors/longshotlabs).\n\nYour **[semantic-release](https://github.com/semantic-release/semantic-release)** bot :package::rocket:"
        }
      ]
    ],
    "tagFormat": "${version}"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@material-ui/core": "^4.12.4",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@tsconfig/recommended": "^1.0.1",
    "@types/lodash": "^4.14.182",
    "@types/react": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-loader": "^8.2.5",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.0.3",
    "react": "17",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "simpl-schema": "^1.12.0",
    "ts-jest": "^28.0.0-next.3",
    "ts-standard": "^11.0.0",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "rfdc": "^1.3.0"
  }
}
